[user]
    name = [[GIT_NAME]]
    email = [[GIT_EMAIL]]
[color]
    ui = true
[diff]
    tool = vimdiff
[difftool]
    prompt = false
[merge]
    conflictstyle = diff3
[alias]
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph
[core]
    excludesfile = ~/.gitignore
[push]
	default = current
